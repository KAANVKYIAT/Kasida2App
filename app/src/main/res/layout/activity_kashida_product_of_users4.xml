<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#DFDDDD"
    android:layout_height="match_parent"
    tools:context=".Kasida_product_for_users">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:padding="10dp"
        android:paddingTop="4dp"
        app:cardElevation="50dp"
        app:cardCornerRadius="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#51BFB5">

            <ImageView
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_width="240dp"
                android:layout_height="230dp"
                android:src="@drawable/kashida_lady_painting"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WALL CANVAS "
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/text_product12_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_canva_women"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <Button
                android:id="@+id/btn_15"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:background="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textSize="10dp"
                android:text="BUY NOW " />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="12dp"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:padding="10dp"
        app:cardElevation="50dp"
        app:cardCornerRadius="50dp">

        <LinearLayout
            android:background="#F3724A"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_width="240dp"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/kashida_tower" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WALL CANVAS"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/text_product13_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_canva_tower"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <Button
                android:id="@+id/btn_16"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:background="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textSize="10dp"
                android:text="BUY NOW " />




        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_forward_4"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginLeft="150dp"
        android:background="@android:drawable/ic_media_ff"
        android:backgroundTint="@color/black" />





</LinearLayout>